<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_delivery_carrier_form_warehouse" model="ir.ui.view">
        <field name="name">delivery.carrier.warehouse.form</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position='inside'>
                <page string="Warehouse" name="warehouse">
					<group>
						<p>
							Associate warehouse to this shipping methods
						</p>
					</group>
                    <field name="stock_warehouse_ids" widfget="many2many_tags" placeholder="Warehouses"/>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
